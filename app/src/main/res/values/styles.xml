<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="detail_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/standard_spacing</item>
        <item name="android:layout_marginRight">@dimen/standard_spacing</item>
        <item name="android:layout_marginBottom">@dimen/standard_spacing</item>
        <item name="android:layout_marginTop">@dimen/standard_spacing</item>
    </style>

    <style name="list_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/standard_spacing</item>
        <item name="android:layout_marginRight">@dimen/standard_spacing</item>
    </style>

    <style name="recycler_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/standard_spacing</item>
        <item name="android:layout_marginRight">@dimen/standard_spacing</item>
        <item name="android:layout_marginTop">@dimen/small_spacing</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/standard_spacing</item>
        <item name="android:layout_marginRight">@dimen/standard_spacing</item>
    </style>

</resources>
