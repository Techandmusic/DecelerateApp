<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/new_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_card_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/standard_spacing"
        android:layout_marginLeft="@dimen/standard_spacing"
        android:layout_marginTop="@dimen/small_spacing"/>

    <Button
        android:id="@+id/input_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_spacing"
        android:layout_below="@+id/add_card_input"
        android:layout_centerHorizontal="true"
        android:text="@string/add_card_button"/>



</RelativeLayout>